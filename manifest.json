{
    "manifest_version": 2,
    "name": "Chrome Console Saver",
    "description": "When open, this extension will capture all console log events and AJAX requests and generate a downloadable file when the page changes.",
    "version": "0.1",
    "devtools_page": "debugger.html",
    "permissions": [
	    "tabs",
	    "http://*/*",
	    "https://*/*"
    ],
    "background": {
	    "scripts": ["scripts/background.js"]
    },
	"options_page": "options.html"
	/*
	"icons": {
		"16": "images/icon16.png",
